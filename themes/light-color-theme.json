{
	"name": "Cereal Light",
	"semanticHighlighting": true,
	"type": "light",
	"colors": {
		//editor background
		"editor.background": "#fdfdfa",
		"editorBracketMatch.border": "#fdfdfa",
		// editor foreground
		"editor.foreground": "#42454b",
		//editor error
		"editorError.foreground": "#e00169",
		"editorError.background": "#ff18ba1a",
		"list.errorForeground": "#e00169",
		"minimap.errorHighlight": "#e00169",
		//editor cursor
		"editor.lineHighlightBackground": "#f8f6f4",
		"editor.lineHighlightBorder": "#f5f0f0",
		"editorBracketMatch.background": "#a3a5a865",
		"editorCursor.foreground": "#000000",
		//editor selection
		"editor.wordHighlightBackground": "#b6b2a959",
		"editor.wordHighlightStrongBackground": "#16c7e644",
		//editor selection
		"editor.selectionBackground": "#b6b2a94d",
		"editor.selectionHighlightBackground": "#b6b2a941",
		"editor.inactiveSelectionBackground": "#b6b2a931",
		"editor.hoverHighlightBackground": "#b6b2a94d",
		"editor.findMatchBackground": "#16c7e673",
		"editor.findMatchHighlightBackground": "#16c7e649",
		//editor line number
		"editorLineNumber.foreground": "#b4bbae",
		"editorLineNumber.activeForeground": "#3c4a5e",
		//editor indent guideline
		"editorIndentGuide.background": "#eeecec",
		"editorIndentGuide.activeBackground": "#c2beb8",
		//editor gutter
		"editorGutter.addedBackground": "#cdd39a",
		"editorGutter.modifiedBackground": "#7bc1f0",
		"editorGutter.deletedBackground": "#f37f20",
		"editorGutter.foldingControlForeground": "#2e2d2d",
		"editorGutter.commentRangeForeground": "#ff0000",
		//git
		"gitDecoration.untrackedResourceForeground": "#53910c",
		"gitDecoration.stageModifiedResourceForeground": "#18a0d6",
		"gitDecoration.modifiedResourceForeground": "#bd7b00",
		"gitDecoration.conflictingResourceForeground": "#eb1366",
		//widget
		"widget.shadow": "#a4c3e5",
		"editorWidget.border": "#b8b8b8",
		"editorWidget.background": "#ffffff",
		"editorHoverWidget.border": "#b8b8b8",
		"editorHoverWidget.background": "#ffffff",
		//list
		"list.focusHighlightForeground": "#ffffff",
		"list.activeSelectionForeground": "#ffffff",
		"list.activeSelectionIconForeground": "#ffffff",
		"list.hoverForeground": "#272727",
		"list.hoverBackground": "#1682e646",
		"tree.indentGuidesStroke": "#d4d1c9",
		"list.highlightForeground": "#ffa011",
		"list.activeSelectionBackground": "#709fe7",
		"list.inactiveSelectionBackground": "#1682e627",
		"list.inactiveSelectionForeground": "#131313",
		//input
		"input.background": "#f5f5f3",
		"input.border": "#b5b6c4",
		"input.foreground": "#42454b",
		"inputOption.activeBackground": "#2c76e4",
		"inputOption.activeForeground": "#ffffff",
		"inputOption.hoverBackground": "#dee0e4",
		//peekview
		"peekView.border": "#42454b",
		"peekViewTitle.background": "#9fa3aa",
		"peekViewTitleLabel.foreground": "#ffffff",
		"peekViewTitleDescription.foreground": "#ffffff",
		"peekViewEditor.background": "#ffffff",
		"peekViewResult.background": "#ffffff",
		//sidebar & activitybar backgrounds
		"activityBar.background": "#f3f2f1",
		"tab.inactiveBackground": "#ebebe8",
		"editorGroupHeader.tabsBackground": "#ebebe8",
		"tab.border": "#ebebe8",
		"sideBar.background": "#f3f2f1",
		"sideBarSectionHeader.background": "#f3f2f1",
		"panelTitle.activeBorder": "#f3f2f1",
		"activityBar.activeBorder": "#f3f2f1",
		//status bar
		"statusBar.background": "#f3f2f1",
		"statusBar.debuggingForeground": "#ffffff",
		"statusBar.debuggingBackground": "#a572e0",
		"statusBarItem.warningForeground": "#ffffff",
		"statusBarItem.warningBackground": "#ff6600",
		"statusBarItem.errorForeground": "#ffffff",
		"statusBarItem.errorBackground": "#ff0080",
		//active text
		"tab.activeForeground": "#000000",
		"tab.hoverForeground": "#2c76e4",
		"sideBarTitle.foreground": "#42454b",
		"sideBarSectionHeader.foreground": "#42454b",
		"panelTitle.activeForeground": "#42454b",
		"statusBar.foreground": "#42454b",
		//inactive object
		"tab.inactiveForeground": "#647779",
		"sideBar.foreground": "#526263",
		"activityBar.inactiveForeground": "#9eaca3",
		//borders
		"panel.border": "#81828d",
		"sideBarSectionHeader.border": "#b5bec5",
		"sideBar.border": "#b5bec5",
		"activityBar.border": "#b5bec5",
		"statusBar.border": "#b5bec5",
		//scrollbar
		"scrollbarSlider.background": "#2c76e43b",
		"scrollbarSlider.hoverBackground": "#2c76e459",
		"scrollbarSlider.activeBackground": "#2c76e49f",
		//tab hover
		"tab.activeBorderTop": "#0ca6ff",
		//focus
		"focusBorder": "#2c76e4",
		//badges
		"badge.background": "#2c76e4",
		"activityBarBadge.background": "#2c76e4",
		"activityBar.foreground": "#2c76e4",
		"activityBarBadge.foreground": "#ffffff",
		"badge.foreground": "#ffffff",
		"button.background": "#2c76e4",
	},
	"tokenColors": [
		{
			"name": "COMMENT",
			"scope": [
				"comment",
				"punctuation.definition.comment",
			],
			"settings": {
				"foreground": "#a6b7ab"
			}
		},
		{
			"name": "VARIABLE",
			"settings": {
				"foreground": "#42454b"
			},
			"scope": [
				"variable",
				"namespace",
				"entity.name.namespace"
			]
		},
		{
			"name": "KEYWORD",
			"settings": {
				"foreground": "#618b31",
				"fontStyle": ""
			},
			"scope": [
				"keyword",
				"entity",
			]
		},
		{
			"name": "STRING",
			"settings": {
				"foreground": "#5d7696"
			},
			"scope": [
				"string"
			]
		},
		{
			"name": "CONSTANT",
			"settings": {
				"foreground": "#965d66"
			},
			"scope": [
				"constant",
			]
		},
		{
			"name": "SIMPLE CONSTANT",
			"settings": {
				"foreground": "#618b31",
				"fontStyle": ""
			},
			"scope": [
				"constant.character.escape",
				"constant.language.boolean",
				"constant.language.true",
				"constant.language.false",
			]
		},
		{
			"name": "STORAGE & IMPORT",
			"settings": {
				"foreground": "#b42a36",
				"fontStyle": ""
			},
			"scope": [
				"storage",
				// Import
				"keyword.control.import",
				"punctuation.definition.directive",
				"keyword.control.directive"
			]
		},
		{
			"name": "NORMAL CONTROL",
			"settings": {
				"foreground": "#e28903",
				"fontStyle": ""
			},
			"scope": [
				"keyword.control",
				"keyword.control.flow.python"
			]
		},
		{
			"name": "SPECIAL CONTROL",
			"settings": {
				"foreground": "#1e80b8",
				"fontStyle": ""
			},
			"scope": [
				"keyword.control.flow",
				"keyword.control.return",
				"keyword.control.break",
				"keyword.control.throw",
				"keyword.operator.new",
				"keyword.operator.delete"
			]
		},
		{
			"name": "ASSIGNMENT",
			"settings": {
				"foreground": "#7a7771",
				"fontStyle": "bold"
			},
			"scope": [
				"keyword.operator.assignment",
				"punctuation.separator.key-value.html"
			]
		},
		{
			"name": "OPERATOR & POINTER",
			"settings": {
				"foreground": "#d342a7",
				"fontStyle": "bold"
			},
			"scope": [
				"keyword.operator",
				"punctuation.accessor",
				"punctuation.separator.period",
				"punctuation.separator.pointer-access",
				"punctuation.separator.dot-access",
				"keyword.operator.assignment.compound",
				// C/C++ specifics
				"storage.modifier.pointer",
				"storage.modifier.reference",
				"storage.type.function.arrow"
			]
		},
		{
			"name": "COMPARISON",
			"settings": {
				"foreground": "#e28903",
				"fontStyle": "bold"
			},
			"scope": [
				"keyword.operator.ternary",
				"keyword.operator.logical",
				"keyword.operator.comparison",
				"keyword.operator.bitwise",
				"keyword.operator.and",
				"keyword.operator.or",
				"keyword.operator.not",
				"keyword.operator.relational"
			]
		},
		{
			"name": "HEADING",
			"settings": {
				"foreground": "#555352",
				"fontStyle": "bold"
			},
			"scope": [
				"variable.function",
				"entity.name.function",
			]
		},
		{
			"name": "LIGHT PUNCTUATION",
			"settings": {
				"foreground": "#b4afa7",
				"fontStyle": ""
			},
			"scope": [
				"punctuation.section.block",
				"meta.tag",
				"constant.other.symbol",
				"constant.other.key",
				"constant.other.color",
				"punctuation.definition.tag",
				"punctuation.definition.block",
				"punctuation.definition.dictionary",
				"punctuation.separator.inheritance",
				"keyword.other.template",
				"keyword.other.substitution",
				"keyword.operator.type.annotation",
				"markup.raw.block"
			]
		},
		{
			"name": "ERROR",
			"settings": {
				"foreground": "#e00169",
				"fontStyle": "bold underline"
			},
			"scope": [
				"invalid",
				"message.error",
				"punctuation.definition.deleted",
				"markup.deleted"
			]
		},
		{
			"name": "DARK PUNCTUATION",
			"settings": {
				"foreground": "#7a7771",
				"fontStyle": ""
			},
			"scope": [
				"meta.brace.round",
				"constant.character.format.placeholder",
				"punctuation.separator",
				"punctuation.terminator",
				"punctuation.section",
				"punctuation.definition.list.begin.python",
				"punctuation.definition.list.end.python",
				"meta.brace.square",
				"punctuation.definition.string"
			]
		},
		{
			"name": "FUNCTION PARENTHESIS",
			"settings": {
				"foreground": "#777371",
				"fontStyle": "bold"
			},
			"scope": [
				"punctuation.definition.parameters",
				"punctuation.definition.arguments",
				"punctuation.section.arguments",
				"punctuation.section.parameters",
				"punctuation.definition.parameters.begin.ts",
				"punctuation.definition.parameters.end.ts"
			]
		},
		{
			"name": "MARKUP LINK",
			"settings": {
				"foreground": "#1e80b8",
				"fontStyle": ""
			},
			"scope": [
				"markup.underline.link"
			]
		},
		{
			"name": "MARKUP LINK DESCRIPTION",
			"settings": {
				"foreground": "#e28903",
				"fontStyle": ""
			},
			"scope": [
				"string.other.link.description",
				"string.other.link.title"
			]
		},
		{
			"name": "MARKUP BOLD",
			"settings": {
				"foreground": "#555352",
				"fontStyle": "bold"
			},
			"scope": [
				"markup.bold"
			]
		},
		{
			"name": "MARKUP HEADING",
			"settings": {
				"foreground": "#b42a36",
				"fontStyle": "bold"
			},
			"scope": [
				"markup.heading",
				"markup.heading entity.name"
			]
		},
		{
			"name": "MARKUP ITALIC",
			"settings": {
				"fontStyle": "italic"
			},
			"scope": [
				"markup.italic"
			]
		},
		{
			"name": "MARKUP LIST",
			"settings": {
				"foreground": "#e28903",
				"fontStyle": ""
			},
			"scope": [
				"punctuation.definition.list",
			]
		},
		{
			"name": "MARKUP QUOTE",
			"settings": {
				"foreground": "#a6b7ab",
			},
			"scope": [
				"markup.quote"
			]
		},
		{
			"name": "MARKUP RAW",
			"settings": {
				"foreground": "#a6b7ab",
			},
			"scope": [
				"markup.raw.block"
			]
		},
		{
			"name": "MARKUP OTHER",
			"settings": {
				"foreground": "#618b31",
			},
			"scope": [
				"markup.other"
			]
		},
		{
			"name": "META SEPRATOR",
			"settings": {
				"foreground": "#7a7771",
			},
			"scope": [
				"meta.separator",
				"punctuation.definition.bold",
				"punctuation.definition.italic",
				"punctuation.definition.metadata",
				"punctuation.definition.array",
				"punctuation.support.type"
			]
		},
		{
			"name": "PROPERTY JSON",
			"settings": {
				"foreground": "#42454b",
			},
			"scope": [
				"support.type.property-name"
			]
		},
		{
			"name": "LANGUAGE JSON",
			"settings": {
				"foreground": "#e28903",
			},
			"scope": [
				"constant.language.json"
			]
		},
		{
			"name": "TAG",
			"settings": {
				"foreground": "#618b31",
			},
			"scope": [
				"entity.name.tag"
			]
		},
		{
			"name": "ATTRIBUTE",
			"settings": {
				"foreground": "#e28903",
			},
			"scope": [
				"entity.other.attribute-name"
			]
		}
	]
}